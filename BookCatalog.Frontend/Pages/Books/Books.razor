@page "/books"

<h3>Books</h3>

<div class="filter-container mb-3">
    <div class="form-group">
        <label for="title">Title:</label>
        <input id="title" @bind="_title" class="form-control" />
    </div>
    <div class="form-group">
        <label for="author">Author:</label>
        <input id="author" @bind="_author" class="form-control" />
    </div>
    <div class="form-group">
        <label for="genre">Genre:</label>
        <input id="genre" @bind="_genre" class="form-control" />
    </div>
    <div class="form-group d-flex align-items-end">
        <button class="btn btn-primary w-100" @onclick="SearchBooks">Search</button>
    </div>
</div>



<button class="btn btn-success mb-3" @onclick="AddBook">Add Book</button>

@if (_books is null)
{
    <p>Loading...</p>
}
else if (_books.Count == 0)
{
    <p>No books found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th style="width:150px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in _books)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Genre</td>
                    <td>
                        <button class="btn btn-primary btn-sm me-2" @onclick="() => EditBook(book.Id)">Edit</button>

                        <button class="btn btn-danger btn-sm" @onclick="() => DeleteBook(book.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Pagination Controls -->
<div>
    <button @onclick="PrevPage" disabled="@(!HasPrev)">Previous</button>
    <span class="mx-2">Page @_currentPage of @_totalPages</span>
    <button @onclick="NextPage" disabled="@(!HasNext)">Next</button>
</div>

